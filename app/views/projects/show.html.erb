<script type="text/javascript">
  <%= render 'helper.js.erb' %>
</script>

<div class="onepage-body">
  <div id="onepage" class="main">
    <section style="background-color:#2c3e50">
      <div class="margin_top">
        <div class="container">
          <div class="row">
            <div class="col-md-10">
              <div class="media" style="margin-top:20px">
                <a class="pull-left" href="#">
                  <img class="media-object img-rounded portfolio_user_image" src=<%= @project.get_owner.image_url %> alt="Sample Image">
                </a>
                <div class="media-body">
                  <h1 class="media-heading name"><%= current_user.fullname%></h1>
                </div>
              </div>
            </div>
            <div class="col-md-2">
              <%# Use remote form to submit live changes to the project's title and description %>
              <%= form_for(@project, remote: true) do |f| %>
                <%= f.hidden_field :title %>
                <%= f.hidden_field :description %>
                <%= f.submit 'Save Changes', class: "btn btn-warning", disable_with: "Saving..." %>
              <% end %>
            </div>
            
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="title-box">
                <div id="proj-title" class="usrinput medium-title"> </div> 
                <div id="proj-description" class="usrinput medium-subtitle"></div>
              </div>
            </div>
          </div>
          <a id="add_block_btn" class="add_block_btn" data-remote="true" href="<%= new_project_block_path @project %>"><i style='font-size:60px' class='fa fa-plus'></i><br> block</a>
        </div>
      </div>
    </section>
  </div>
</div>


<!-- primary authors: psaylor & anuhyag -->
<!-- template code for creating a new block in its own section on the page; this div meant to be cloned and the modified -->
<div id='new-block-html-template' class="margin_top">
  <div class="container">
    <h1 style="color:#a9afb4;"> Please Choose A Template: </h1>
    <br>
    <div class="row new_block_template_choice" id = "new_block_template_choice">
      
      <!-- sets up the icon representing double resource horizontal template in sidebar -->
      <div class = "col-md-4">
        <div class="template_choice_outer_square" id="horizontal">
          <div class = "template_choice_horizontal">
          </div>
           <div class = "template_choice_horizontal">
          </div>
        </div>
        <div class="btn-group">
          <a class="resource-select-btn" data-remote="true" data-target="#resource-select-modal" data-toggle="modal" href="<%= new_code_path %>"><%= fa_icon "code 4x" %></a>

          <a class="resource-select-btn" data-remote="true" data-target="#resource-select-modal" data-toggle="modal" href="<%= new_description_path %>"><%= fa_icon "align-left 4x" %></a>

          <a class="resource-select-btn" data-remote="true" data-target="#resource-select-modal" data-toggle="modal" href="<%= new_image_path %>"><%= fa_icon "picture-o 4x" %></a>
          
          <a class=" resource-select-btn" data-remote="true" data-target="#resource-select-modal" data-toggle="modal" href="<%= new_video_path %>"><%= fa_icon "video-camera 4x" %></a>
      </div>
      </div>
      
      <!-- sets up the icon representing double resource vertical template in sidebar -->
      <div class = "col-md-4">
        <div class="template_choice_outer_square" id="vertical">
          <div class = "template_choice_vertical">
          </div>
          <div class = "template_choice_vertical">
          </div>
        </div>
      </div>
      
      <!-- sets up the icon representing single resource template in sidebar -->
      <div class = "col-md-4">
        <div class="template_choice_outer_square" id="center">
            <div class = "template_choice_center">
            </div>
        </div>
      </div>
    
    </div> 
    <div class="block-form row"></div>
  </div>
</div> <!--  new-block-html-template -->

<!-- sidebar with different template options -->
<div class="sidebar">

  <!-- sets up the div representing double resource horizontal template when new block is created -->
  <div class="sidebar_double_horizontal">
    <div class="sidebar_vertical_square">
      <div class="sidebar_vertical_smaller_square">
      </div>
      <div class="sidebar_vertical_smaller_square">
      </div>
    </div>
    <div class="block-form"></div>
  </div>

  <!-- sets up the div representing double resource vertical template when new block is created -->
  <div class="sidebar_double_vertical">
    <div class="sidebar_horizontal_square">
      <div class="sidebar_horizontal_smaller_square">
      </div>
      <div class="sidebar_horizontal_smaller_square">
      </div>
    </div>
  </div>

  <!-- sets up the div representing single resource center template when new block is created -->
  <div class="sidebar_single_centered">
    <div class="sidebar_center_square">
      <div class="sidebar_horizontal_smaller_square">
      </div>
    </div>
  </div>

</div> <!-- sidebar -->

