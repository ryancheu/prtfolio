<%= bootstrap_form_for(@project) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.text_field :title, label: :none, placeholder: 'Project Title' %>

  <%= f.text_area :description, label: :none, placeholder: "Project Description" %>

  <%= f.actions do %>
    <%= f.primary 'Save Changes', disable_with: 'Saving...' %>
  <% end %>
<% end %>
