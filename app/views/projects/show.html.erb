<script type="text/javascript">
  // this js file must be included before any js file that uses its data structures
  <%= render 'blockList.js.erb' %> 
</script>

<script type="text/javascript">
  <%= render 'helper.js.erb' %>
</script>

<div class="onepage-body" >
  <div id="onepage" class="main" >
    <section class="project_header" style="background-color:#78BAE2">
      <div class="margin_top">
        <div class="container portfolio_name_area">
          <div class="row">
            <div class="col-md-10">
              <div class="media" style="margin-top:20px;">
                <a class="pull-left" href="#">
                  <img class="media-object img-rounded portfolio_user_image" style="width: 75px; height: 75px;" src=<%= @project.get_owner.image_url %> alt="Sample Image">
                </a>
                <div class="media-body">
                  <h1 class="media-heading name" style="margin-left:5px; color:#343838; font-weight:500;"><%= current_user.fullname%></h1>
                </div>
              </div>
            </div>
            <div class="col-md-2">
              <%# Use remote form to submit live changes to the project's title and description %>
              <%= form_for(@project, remote: true) do |f| %>
                <%= f.hidden_field :title %>
                <%= f.hidden_field :description %>
                <%= f.submit 'Save Changes', class: "btn btn-warning", disable_with: "Saving..." %>
              <% end %>
            </div>
            
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="title-box">
                <div id="proj-title" class="usrinput medium-title"> </div> 
                <div id="proj-description" class="usrinput medium-subtitle"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <% @project.blocks.each do |block| %>
    <section>
      <div class="container">
        <%= render block %>
      </div>
    </section>
    <% end %>

  </div>
</div>

