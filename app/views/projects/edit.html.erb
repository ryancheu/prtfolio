<div class="container">
  <div class="page-header">
    <h1>Editing Project <small><%= @project.title %> </small></h1>
  </div>
<div>

<div class="container">
    <div class="span6">
    <%= bootstrap_form_for(@project) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.text_field :title, label: :none, placeholder: 'Project Title', class: 'span6' %>

      <%= f.text_area :description, label: :none, placeholder: "Project Description", class: 'span6' %>

      
      <%= f.actions do %>
        <%= f.primary 'Save Changes', disable_with: 'Saving...' %>
        <%= f.secondary 'Cancel' %>
      <% end %>
      
    <% end %>

    <h4>Current Blocks</h4>

    <% @project.blocks.each do |block| %>
        <%= render block %>
    <% end %>

   <%= link_to 'Add Block', new_project_block_path(@project), class: "btn btn-warning" %>

</div>


<%= link_to 'Show', @project %> |
<%= link_to 'Back', projects_path %>
