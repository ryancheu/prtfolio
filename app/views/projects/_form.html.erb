<div class="row">
  <div class="col-md-6">
  <%= bootstrap_form_for(@project) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <%= f.text_field :title, label: :none, placeholder: 'Project Title', class: 'form-control' %>

    <%= f.text_area :description, label: :none, placeholder: "Project Description", class: 'form-control' %>

    
    <%= f.actions do %>
      <%= f.primary nil, disable_with: 'Saving...' %>
      <%= link_to 'Cancel', @project, class: 'btn btn-default' %>
    <% end %>
    
  <% end %>
  </div>
</div>

