<!-- template code for creating a new block in its own section on the page; this div meant to be cloned and the modified -->
<div id='new-block-html-template' class="margin_top">
  <div class="container">
    <h1 style="color:#a9afb4;"> Please Choose A Template: </h1>
    <br>
    <div class="row new_block_template_choice" id = "new_block_template_choice">
      
      <!-- sets up the icon representing double resource horizontal template in sidebar -->
      <div class = "col-md-4">
        <div class="template_choice_outer_square" id="horizontal">
          <div class = "template_choice_horizontal">
          </div>
           <div class = "template_choice_horizontal">
          </div>
        </div>
      </div>
      
      <!-- sets up the icon representing double resource vertical template in sidebar -->
      <div class = "col-md-4">
        <div class="template_choice_outer_square" id="vertical">
          <div class = "template_choice_vertical">
          </div>
          <div class = "template_choice_vertical">
          </div>
        </div>
      </div>
      
      <!-- sets up the icon representing single resource template in sidebar -->
      <div class = "col-md-4">
        <div class="template_choice_outer_square" id="center">
            <div class = "template_choice_center">
            </div>
        </div>
      </div>
    
    </div> 
  </div>
</div>

<div class="sidebar">

  <!-- sets up the div representing double resource horizontal template when new block is created -->
  <div class="sidebar_double_horizontal">
    <div class="sidebar_vertical_square">
      <div class="sidebar_vertical_smaller_square">
      </div>
      <div class="sidebar_vertical_smaller_square">
      </div>
    </div>
  </div>

  <!-- sets up the div representing double resource vertical template when new block is created -->
  <div class="sidebar_double_vertical">
    <div class="sidebar_horizontal_square">
      <div class="sidebar_horizontal_smaller_square">
      </div>
      <div class="sidebar_horizontal_smaller_square">
      </div>
    </div>
  </div>

  <!-- sets up the div representing single resource center template when new block is created -->
  <div class="sidebar_single_centered">
    <div class="sidebar_center_square">
      <div class="sidebar_horizontal_smaller_square">
      </div>
    </div>
  </div>

</div>
