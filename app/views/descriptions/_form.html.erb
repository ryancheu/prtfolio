<%= bootstrap_form_for(@description, remote: true) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="field">
    <%= f.text_field :title, class: "form-control"  %>
  </div>
  <div class="field">
    <%= f.text_area :content, class: "form-control"  %>
  </div>
  <div class="actions">
    <%= f.submit class: "btn btn-primary" %>
  </div>
<% end %>
