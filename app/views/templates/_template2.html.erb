<%
	resource1 = resource1 || Description.create(title: "No Title", content: "No resource provided")
	resource2 = resource2 || Description.create(title: "No Title 2", content: "No second resource provided")
	bid = bid || 0
	# showMode is true when showing, or false for editing
	showMode = showMode || false
	temp = temp || false
	class_name = "template2_chosen_square_borderless" 
    id_name = "template2_chosen_square_borderless"
    if temp != 1
        class_name = "template2_chosen_square"
        id_name = "template2_chosen_square"
    end
%>

<div class="row">

	<div class="<%= class_name %>" id="<%= id_name %>" data-pos=1 >
		<% if showMode %>
			<%= render resource1 %>
		<% else %>
			<%= render partial: 'projects/resourceButtons', locals: { bid: bid, res_pos: 1} %>
		<% end %>
	</div>

	<div class="<%= class_name %>" id="<%= id_name %>" data-pos=2 >
		<% if showMode %>
			<%= render resource2 %>
		<% else %>
			<%= render partial: 'projects/resourceButtons', locals: { bid: bid, res_pos: 2 } %>
		<% end %>
	</div>
	
</div>

