<div class="hero-unit">
  <div class="row-fluid">
    <div class="span3">
      <div class="thumbnail span12">
        <img src=<%= @project.get_owner.image_url %> alt="Sample Image">
      </div>
    </div>
    <div class="span9">
      <div class="project_name">
        <h1><%= @project.title %></h1>
        <h4><%= @project.description %></h4>        
      </div>
    </div>
  </div>
</div>

<% @project.blocks.each do |block| %>
  <h4> <%= block.id %> </h4>
  <%= render block %>
  <%= link_to 'Show', [@project, block] %>
  <%= link_to 'Edit', edit_project_block_path(@project, block) %>
  <%= link_to 'Destroy', [@project, block], method: :delete, data: { confirm: 'Are you sure?' } %>
<% end %>


